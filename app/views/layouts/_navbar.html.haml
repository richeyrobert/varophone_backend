/ This will be the code for the navigation bar.
.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "Nav Bar Title", root_path, :class => "brand"
      %ul.nav
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
            Leads
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Item number 1", root_path
            %li.divider
            %li= link_to "Item number 2", root_path
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
            Settings
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Item Number 1", root_path
            %li= link_to "Item Number 2", root_path
      %ul.nav.pull-right
        - if current_user.present?
          %li.divider-vertical
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              =current_user.email
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Edit Profile', root_path
              %li.divider
              %li= link_to 'Log Out', destroy_user_session_path, method: :delete
        - else 
          %li.divider-vertical
            = link_to "Log In", user_session_path